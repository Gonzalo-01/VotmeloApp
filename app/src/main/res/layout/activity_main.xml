<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="#121212"
    tools:context=".ui.MainActivity">

    <!-- Título principal -->
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Bienvenido a Votmelo!"
        android:textColor="@color/turquesa"
        android:textSize="28sp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:textStyle="bold"/>

    <!-- Subtítulo -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disfruta de la música con tus amigos"
        android:textColor="#B3FFFFFF"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:layout_marginBottom="32dp"
        android:gravity="center"/>

    <!-- Botón de inicio de sesión con Spotify -->
    <ImageButton
        android:id="@+id/login_button"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/spotify_icon"
        android:background="@drawable/circle_button_background"
        android:contentDescription="Botón de inicio de sesión con Spotify"
        android:elevation="6dp"/>

    <!-- Pie de página -->
    <TextView
        android:id="@+id/tvFooter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spotify Integration © 2024"
        android:textColor="#B3FFFFFF"
        android:textSize="12sp"
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="32dp"
        android:gravity="center"/>
</LinearLayout>